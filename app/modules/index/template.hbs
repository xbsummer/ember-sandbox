<h2>在父子组件之间传递状态</h2>

<section class="card">{{!-- 1 --}}
  <header class="card-header">{{!-- 1.1 --}}
    用户列表{{if selectedUser (concat " - " selectedUser.login)}}
  </header>

  <div class="grid">
    <ul class="cell -4of12" local-class="user-list">{{!-- 1.2 --}}
      {{#if selectedUser}}
        <button type="button" class="btn btn-primary btn-block" onclick={{action "clearUser"}}>
          重置
        </button>
      {{/if}}
      {{#each model as |user|}}
        <li local-class="user-item" onclick={{action "selectUser" user}}>{{user.login}}</li>
      {{/each}}
    </ul>

    <div class="cell -8of12">{{!-- 1.3 --}}
      {{#unless selectedUser}}
        <h3 class="grid -center">请在左边列表选择一个用户</h3>
      {{else}}
        <h3 class="grid -center">{{selectedUser.login}}</h3>
        <div class="grid -center">
          <div class="cell -6of12">
            <picture class="intrinsic -square">
              <source media="(min-width: 980px)" srcset={{selectedUser.avatar_url}}>
              <img src={{selectedUser.avatar_url}} title={{selectedUser.login}}>
            </picture>
          </div>
        </div>
      {{/unless}}
    </div>
  </div>
</section>
